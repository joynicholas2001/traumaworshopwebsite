rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Registrants Collection
    // - allow create: Public (so anyone can register)
    // - allow read, update, delete: Authenticated Admins only
    match /registrants/{registrant} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Settings Collection
    // - Public Read: Allowed ONLY for 'workshop' settings (Title, Date, Banner)
    // - Admin Read: Allowed for ALL settings (including 'whatsapp' with API keys)
    // - Admin Write: Allowed for ALL settings
    match /settings/{docId} {
      allow read: if docId == 'workshop' || request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
